<h1 class="pb-4">Recipes</h1>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Recipes</li>
    </ol>
  </nav>

  <% if(recipes != '') { %>
    (<%= recipes.length %>)
<% } %>


  <div class="row row-cols-2 row-cols-lg-5 g-2 g-lg-3 mb-4">
    <% if(recipes != '') { %>
        <% recipes.forEach(function(recipeItem, index){ %>
            <a href="/recipes/<%= recipeItem._id %>" class="col text-center category__link">
                <div class="category__img shadow">
                    <img src="/uploads/<%= recipeItem.image %>" alt="<%= recipeItem.name %>" loading="lazy">
                </div>
                <div class="pt-1">
                    <%= recipeItem.name %>
                </div>
            </a>
            <% }) %>
    <% } else { %>
    <p>No items found.</p>
    <% } %>
  </div>