<% if(recipes != null ) { %>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Home</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- recipes.name %></li>
      </ol>
    </nav>
    <div class="row">
        <div class="col-12 col-md-4">
          <img src="/uploads/<%- recipes.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- recipes.name %>" loading="lazy">
        </div>
        <div class="col-12 col-md-8">
          <div class="row">
            <div class="col-12"><h1><%- recipes.name %></h1></div>
            <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- recipes.category %></div>
            <div class="col-12" style="white-space: pre-line;">
              <h4>Cooking Instructions</h4>
              <%- recipes.description %>
            </div>
          </div>
          <div class="row pt-4">
            <div class="col-12">
              <h4>Ingredients</h4>
              <ul class="list-group list-group-flush">
                <% recipes.ingredients.forEach(function(ingredients, index){ %>
                  <li class="list-group-item"><%= ingredients %></li>
                <% }) %>
              </ul> 
            </div>
          </div>
          <div class="col-12" style="white-space: pre-line;">
            <h4> Instructions</h4>
            <%- recipes.instructions %>
          </div>

        </div>
      </div>
    <% } else { %>
      <p>No item found.</p>
    <% } %>